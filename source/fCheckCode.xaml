<Window x:Class="bookstore.fCheckCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bookstore"
        mc:Ignorable="d"
        Title="fCheckCode" Height="200" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="29" Margin="38,10,0,0" Text="Mã xác nhận đã được gửi đến SĐT của bạn vui  lòng nhập để xác minh" TextWrapping="Wrap" VerticalAlignment="Top" Width="331"/>
        <TextBox HorizontalAlignment="Left" Height="43" Margin="69,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" x:Name="code"/>
        <Button Content="OK" HorizontalAlignment="Left" Height="25" Margin="139,119,0,0" VerticalAlignment="Top" Width="92" Click="check_Click"/>

    </Grid>
</Window>
